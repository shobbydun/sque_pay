<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eduardo"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edit_name"
        android:layout_width="284dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="User Name"
        android:background="#B0DC938D"
        android:inputType="textPersonName"
        android:textColorHint="#E40B25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <EditText
        android:id="@+id/email_person1"
        android:layout_width="282dp"
        android:background="#B0DC938D"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#E40B25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_name"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/edit_pass1b"
        android:layout_width="278dp"
        android:layout_height="50dp"
        android:background="#B0DC938D"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#E40B25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_person1"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/edit_pass2"
        android:layout_width="284dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:background="#B0DC938D"
        android:textColorHint="#E40B25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass1b"
        app:layout_constraintVertical_bias="0.125" />

    <ImageButton
        android:id="@+id/imgbtn_login1"
        android:layout_width="155dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        android:background="#07000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass2"
        app:layout_constraintVertical_bias="0.824"
        app:srcCompat="@drawable/log_in1" />

    <ImageButton
        android:id="@+id/imgsignup1"
        android:layout_width="157dp"
        android:layout_height="89dp"
        app:layout_constraintBottom_toTopOf="@+id/imgbtn_login1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        android:background="#07000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass2"
        app:layout_constraintVertical_bias="0.488"
        app:srcCompat="@drawable/signup1" />

    <TextView
        android:id="@+id/txt_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If You Have An Account Click Below"
        app:layout_constraintBottom_toTopOf="@+id/imgbtn_login1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgsignup1"
        app:layout_constraintVertical_bias="0.688" />

    <ProgressBar
        android:id="@+id/progressBar_regi"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_login1"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
