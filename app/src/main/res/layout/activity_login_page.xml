<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jon"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/email_person1"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:ems="10"
        android:background="#B0DC938D"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#290101"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/edit_pass1b"
        android:layout_width="278dp"
        android:layout_height="50dp"
        android:ems="10"
        android:background="#B0DC938D"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#290101"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_person1"
        app:layout_constraintVertical_bias="0.098" />

    <ImageButton
        android:id="@+id/imgbtn_login1"
        android:layout_width="155dp"
        android:layout_height="82dp"
        android:layout_marginBottom="368dp"
        android:background="#07000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass1b"
        app:layout_constraintVertical_bias="0.511"
        app:srcCompat="@drawable/log_in1" />

    <TextView
        android:id="@+id/txt_ex1"
        android:layout_width="203dp"
        android:layout_height="37dp"
        android:text="New Here Click Below"
        android:textColor="#64F10B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_login1"
        app:layout_constraintVertical_bias="0.189" />

    <ImageButton
        android:id="@+id/imgsignup1"
        android:layout_width="157dp"
        android:layout_height="89dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#07000000"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ex1"
        app:layout_constraintVertical_bias="0.322"
        app:srcCompat="@drawable/signup1" />

    <ProgressBar
        android:id="@+id/progressBarlogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgsignup1" />


</androidx.constraintlayout.widget.ConstraintLayout>
